<?xml version="1.0" encoding="utf-8"?>

<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"

    android:layout_height="match_parent"

    android:background="@drawable/login_background"

    android:orientation="vertical"

    tools:context=".view.login.LoginFragment">


    <LinearLayout

        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:orientation="vertical"

        >


        <ImageView

            android:id="@+id/image_logo"

            android:layout_width="match_parent"

            android:layout_height="@dimen/layout_200dp"

            android:layout_marginLeft="@dimen/layout_dimen_40dp"

            android:layout_marginRight="@dimen/layout_dimen_40dp"

            android:scaleType="fitCenter"

            android:src="@drawable/logo1" />


        <TextView

            android:id="@+id/tv_logo"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_gravity="center"

            android:layout_marginTop="@dimen/layout_dimen_mins60dp"

            android:fontFamily="sans-serif-thin"

            android:text="@string/sign_in"

            android:textColor="@color/color_bage"

            android:textSize="@dimen/textsize_30sp"

            />


    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:layout_marginLeft="@dimen/layout_dimen_40dp"

        android:layout_marginRight="@dimen/layout_dimen_40dp"

        android:orientation="vertical"

        >


        <LinearLayout

            android:id="@+id/linear1"

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:orientation="vertical">


            <EditText
                android:id="@+id/email_login"

                android:layout_width="match_parent"

                android:layout_height="wrap_content"

                android:layout_margin="@dimen/layout_dimen_12dp"

                android:backgroundTint="#B3AEAE"

                android:drawableLeft="@drawable/ic_lock"

                android:drawablePadding="@dimen/layout_dimen_15dp"

                android:hint="@string/hint_email"

                android:inputType="textEmailAddress"

                android:padding="@dimen/layout_dimen_15dp"

                android:paddingStart="@dimen/layout_dimen_5dp"

                android:textColorHint="@color/color_white"

                android:textSize="@dimen/text_size_15" />

            <EditText
                android:id="@+id/password_login"

                android:layout_width="match_parent"

                android:layout_height="wrap_content"

                android:layout_margin="@dimen/layout_dimen_12dp"

                android:backgroundTint="@color/color_B3AEAE"

                android:drawableLeft="@drawable/ic_lock"

                android:drawablePadding="@dimen/layout_dimen_15dp"

                android:hint="@string/hint_password"

                android:inputType="textPassword"

                android:padding="@dimen/layout_dimen_15dp"

                android:paddingStart="@dimen/layout_dimen_5dp"

                android:textColorHint="@color/color_white"

                android:textSize="@dimen/text_size_15"


                />


            <TextView

                android:id="@+id/forget_password"

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:layout_gravity="center_horizontal"

                android:layout_marginTop="@dimen/layout_dimen_20dp"

                android:text="@string/Forget_Password"

                android:textColor="@color/color_bage"

                android:textStyle="bold"

                />


        </LinearLayout>

        <LinearLayout

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_gravity="center"

            android:orientation="vertical"

            >


            <Button

                android:id="@+id/but_sing"

                android:layout_width="wrap_content"

                android:layout_height="@dimen/layout_dimen_40dp"

                android:layout_centerHorizontal="true"

                android:layout_marginTop="@dimen/layout_dimen_60dp"

                android:background="@drawable/but_bg"

                android:fontFamily="sans-serif-medium"

                android:gravity="center"

                android:paddingLeft="@dimen/layout_dimen_60dp"

                android:paddingRight="@dimen/layout_dimen_60dp"

                android:text="@string/sign_in"

                android:textAllCaps="false"

                android:textColor="@color/color_white"

                android:textSize="@dimen/textsize_16sp"

                />

        </LinearLayout>

        <LinearLayout

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_gravity="center"

            android:layout_marginTop="@dimen/layout_dimen_15dp"

            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:text="@string/Dont_have_an_account"

                android:textColor="@color/color_bage"

                android:textSize="@dimen/layout_dimen_12dp"

                />

            <TextView

                android:id="@+id/regester_here"

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:fontFamily="sans-serif-black"

                android:text="@string/Register_here"

                android:textColor="@color/color_bage"

                android:textSize="@dimen/layout_dimen_12dp"

                />


        </LinearLayout>


    </LinearLayout>

</LinearLayout>