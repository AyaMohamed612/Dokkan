<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chat_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margintop_9"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/margin_bottom_5"
        android:background="@null"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_message"
            android:orientation="horizontal"
            android:padding="@dimen/padding_3">

            <Button
                android:layout_width="@dimen/width_30"
                android:layout_height="@dimen/height_30"
                android:layout_marginStart="@dimen/margin_left_5"

                android:background="@drawable/ic_sentiment_very_satisfied_black_24dp" />

            <EditText
                android:id="@+id/Enter_message"
                android:layout_width="@dimen/width_250"
                android:layout_height="@dimen/height_40"
                android:layout_marginStart="@dimen/margin_left_7"
                android:layout_marginEnd="@dimen/margin_right_9"
                android:autofillHints="@string/type_a_message"
                android:background="@null"
                android:hint="@string/type_a_message"
                android:inputType="textMultiLine"
                android:maxHeight="@dimen/max_height_23" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/width_47"
            android:layout_height="@dimen/height_47"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_left_3"
            android:background="@drawable/background_send_butt">


            <Button
                android:id="@+id/chat_send_msg"
                android:layout_width="@dimen/width_30"
                android:layout_height="@dimen/height_30"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/margin_left_11"
                android:background="@drawable/ic_send_black_24dp"

                />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
