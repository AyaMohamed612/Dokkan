<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register_customer"
    android:orientation="vertical"
    >
<ImageView
    android:id="@+id/arrow_back"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/ic_chevron_left_black_24dp"
    android:padding="@dimen/arrow_back_padd"
    />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/margin_150"
        android:gravity="center">




        <EditText
            android:id="@+id/name"
            android:layout_width="@dimen/name_width_250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_user_name"
            android:hint="@string/username"
            android:textColorHint="@color/colorPrimary"
            android:textColor="@color/colorPrimary"
            android:inputType="text"
            android:padding="@dimen/padding_15"
            android:textSize="@dimen/txt_size"
            android:backgroundTint="@color/backgroundTint"
            android:textAlignment="center"
            />

        <EditText
            android:id="@+id/email"
            android:layout_width="@dimen/email_width_250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_email"
            android:hint="@string/e_mail"
            android:textColorHint="@color/colorPrimary"
            android:inputType="textEmailAddress"
            android:padding="@dimen/padding_15"
            android:textSize="@dimen/txt_size"
            android:backgroundTint="@color/backgroundTint"
            android:textAlignment="center"
            />

        <EditText
            android:id="@+id/password"
            android:layout_width="@dimen/pass_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_pass"
            android:hint="@string/password"
            android:textColorHint="@color/colorPrimary"
            android:padding="@dimen/padding_15"
            android:textSize="@dimen/txt_size"
            android:backgroundTint="@color/backgroundTint"
            android:textAlignment="center"
            android:inputType="textPassword"
            />

        <EditText
            android:id="@+id/confirm_password"
            android:layout_width="@dimen/confirm_pass_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_pass"
            android:hint="@string/confirm_password"
            android:textColorHint="@color/colorPrimary"
            android:padding="@dimen/padding_15"
            android:textSize="@dimen/txt_size"
            android:backgroundTint="@color/backgroundTint"
            android:textAlignment="center"
            android:inputType="textPassword"

            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padd_top_35">

            <CheckBox
                android:id="@+id/cb_reg"
                android:layout_width="@dimen/checkBox_width"
                android:layout_height="wrap_content"
                android:buttonTint="@color/colorPrimary"
                android:scaleX="0.60"
                android:scaleY="0.60" />

            <TextView
                android:id="@+id/tv_terms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_7"
                android:layout_toRightOf="@id/cb_reg"
                android:text="@string/i_agree_to_the_terms_and_conditions"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/txt_size_11"

                />

            <View
                android:layout_width="@dimen/view_width"
                android:layout_height="@dimen/view_height"
                android:layout_marginLeft="@dimen/margin_left_101"
                android:layout_marginTop="@dimen/margin_top_20"
                android:background="@color/colorPrimary" />


        </RelativeLayout>


        <Button
            android:id="@+id/butt"
            android:layout_width="@dimen/butt_width"
            android:layout_height="@dimen/butt_height"
            android:background="@drawable/button"
            android:text="@string/register3"
            android:textColor="@color/color_fff2"
            android:layout_marginTop="@dimen/margin_top_50"
            />

    </LinearLayout>

</LinearLayout>