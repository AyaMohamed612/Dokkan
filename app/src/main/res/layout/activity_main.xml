<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/nores"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
            android:layout_marginStart="10dp"
            />

        <EditText
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_margin="40dp"
            android:hint="search..."
            android:background="@drawable/corner"
            android:drawableStart="@drawable/ic_search_black_24dp"
            android:drawablePadding="10dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_notifications_none_black_24dp"
            android:layout_marginEnd="10dp"/>


    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#BBAFAF"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sorry,no result found"
            android:textSize="20dp"
            android:layout_marginTop="60dp"
            android:textColor="#9a7c84"/>
        <TextView
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:text="What you searshed for was unfortunately not found or doesnot exist "
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textColor="#BBAFAF"/>
    </LinearLayout>

</LinearLayout>